{
  "manifest_version": 3,
  "name": "Retail Scraper (Realtor.com)",
  "version": "1.0.0",
  "description": "Secure data scraping tool for Realtor.com with authentication",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.realtor.com/*",
    "https://retail-scraper-backend.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Retail Scraper"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.realtor.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}